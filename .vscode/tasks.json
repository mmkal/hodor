{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "args": ["run", "test-xunit"],
    "showOutput": "silent",
    "isWatching": false,
    "echoCommand": true,
    "problemMatcher": [
        {
            "owner": "ava",
            "fileLocation":"absolute",
            "pattern": [
                // {
                //     "regexp": "\\d+ failed"
                // },
                // {
                //     "regexp": "\\d+\\. (((.*)( Â»)?)+)",
                //     "message": 1
                // },
                {
                    "regexp": "\\s*Test.fn \\((.*):(\\d+):(\\d+)",
                    "message": 1,
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "loop": true
                }
            ]
        },
        {
            "owner": "tap-xunit",
            "fileLocation": "absolute",
            "pattern": [
                { "regexp": "<testsuite .* failures=\"\\d+\".*>" },
                {
                    "regexp": "<testcase name=\"#(\\d+) (.*)\".*>",
                    "code": 1,
                    "message": 2
                },
                { "regexp": "<failure>" },
                { "regexp": ".*" },
                { "regexp": ".*" },
                { "regexp": ".*" },
                { "regexp": ".*" },
                {
                    "regexp": "at: Test.fn \\((.*):(\\d+):(\\d+)",
                    "message": 1,
                    "file": 1,
                    "line": 2,
                    "column": 3
                }
            ]
        }
    ]
}